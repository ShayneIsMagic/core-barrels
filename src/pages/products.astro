  <meta name="keywords" content="8 inch core barrel, 10 inch core barrel, PDC core barrel, dry cutting barrel, core barrel rebuild program, Weldco Blades products" slot="head" />
  
  <!-- Schema for Products -->
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "Product",
        "name": "Weldco 10\" PDC Core Bit",
        "description": "10-inch PDC core barrel designed for superior longevity and dry-cutting capability in utility locating.",
        "brand": { "@type": "Brand", "name": "Weldco Blades" },
        "sku": "WBCB-PDC-10",
        "image": "https://corebarrels.com/images/pdc-core-barrel.avif",
        "offers": {
          "@type": "Offer",
          "priceCurrency": "USD",
          "price": "1600.00",
          "url": "https://corebarrels.com/contact",
          "availability": "https://schema.org/InStock"
        }
      },
      {
        "@type": "Product",
        "name": "Weldco 8\" PDC Core Bit",
        "description": "8-inch PDC core barrel designed for superior longevity and dry-cutting capability in utility locating.",
        "brand": { "@type": "Brand", "name": "Weldco Blades" },
        "sku": "WBCB-PDC-8",
        "image": "https://corebarrels.com/images/product-8-inch.avif",
        "offers": {
          "@type": "Offer",
          "priceCurrency": "USD",
          "price": "1400.00",
          "url": "https://corebarrels.com/contact",
          "availability": "https://schema.org/InStock"
        }
      }
    ]
  }
  </script>

  <link rel="canonical" href="https://corebarrels.com/products" slot="head" />

  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1>Our Core Barrels</h1>
      <p>Engineered for performance & longevity. Designed to maximize your efficiency and minimize costs in the Rocky Mountain region.</p>
    </div>
  </section>

  <!-- Products Section -->
  <section class="products-section">
    <div class="container">
      <div class="products-grid">
        <!-- 10" Core Bit Product Card -->
        <div class="product-card">
          <img src="/images/pdc-core-barrel.avif" alt="10 inch PDC Core Barrel by Weldco" class="product-photo" />
          <div class="product-card-content">
            <h3>10" PDC Core Bit</h3>
            <p class="price">$1,600.00</p>
            <p class="description">Our high-performance 10-inch core bit, delivering unmatched longevity and dry-cutting efficiency.</p>
            <ul class="product-specs">
              <li><span class="spec-icon">üéØ</span> <strong>Cores Per Barrel:</strong> 600-800</li>
              <li><span class="spec-icon">‚ö°Ô∏è</span> <strong>Performance:</strong> 4X More Cores</li>
              <li><span class="spec-icon">üíß</span> <strong>Cutting:</strong> 100% Dry-Cutting</li>
            </ul>
            <a href="/contact" class="btn btn-primary">Request a Quote</a>
          </div>
        </div>
        
        <!-- 8" Core Bit Product Card -->
        <div class="product-card">
          <img src="/images/product-8-inch.avif" alt="8 inch PDC Core Barrel by Weldco" class="product-photo" />
          <div class="product-card-content">
            <h3>8" PDC Core Bit</h3>
            <p class="price">$1,400.00</p>
            <p class="description">The versatile 8-inch core bit, perfect for a wide range of utility locating applications.</p>
            <ul class="product-specs">
              <li><span class="spec-icon">üéØ</span> <strong>Cores Per Barrel:</strong> 600-800</li>
              <li><span class="spec-icon">‚ö°Ô∏è</span> <strong>Performance:</strong> 4X More Cores</li>
              <li><span class="spec-icon">üíß</span> <strong>Cutting:</strong> 100% Dry-Cutting</li>
            </ul>
            <a href="/contact" class="btn btn-primary">Request a Quote</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Rebuild Program Section -->
  <section class="rebuild-program">
    <div class="container">
      <div class="section-header">
        <h2>Extend Barrel Life with Our Rebuild Program</h2>
        <p>Maximize your investment with our professional restoration service. It's the smart, cost-effective alternative to frequent replacement.</p>
      </div>
      
      <div class="rebuild-grid">
        <div class="rebuild-card">
          <div class="rebuild-icon">üí∞</div>
