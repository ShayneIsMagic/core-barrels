<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--black) 0%, var(--gray-800) 100%);
    color: var(--white);
    padding: 6rem 0;
    text-align: center;
  }
  
  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Space Grotesk', sans-serif;
  }
  
  .hero p {
    font-size: 1.25rem;
    color: var(--gray-300);
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  
  /* Products Section */
  .products-section {
    padding: 6rem 0;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
  }

  .product-card {
    background: var(--white);
    border-radius: 1rem;
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .product-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-xl);
  }
  
  .product-image {
    position: relative;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.05);
  }
  
  .product-info {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .product-info h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-family: 'Space Grotesk', sans-serif;
    color: var(--gray-900);
  }
  
  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .specs, .features {
    margin-bottom: 1.5rem;
  }
  
  .specs h3, .features h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--gray-800);
  }
  
  .specs ul, .features ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .specs li, .features li {
    font-size: 0.95rem;
    color: var(--gray-700);
    margin-bottom: 0.5rem;
    padding-left: 1rem;
    position: relative;
  }
  
  .specs li::before, .features li::before {
    content: '•';
    color: var(--primary);
    font-weight: bold;
    position: absolute;
    left: 0;
  }
  
  .product-photo {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
  }
  
  .product-card-content .btn {
    width: 100%;
    margin-top: auto;
  }
  
  /* Rebuild Program */
  .rebuild-program {
    padding: 6rem 0;
    background: var(--gray-50);
  }
  
  .rebuild-service {
    padding: 6rem 0;
    background: var(--gray-50);
  }
  
  .rebuild-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .rebuild-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Space Grotesk', sans-serif;
    color: var(--gray-900);
  }
  
  .rebuild-content > p {
    font-size: 1.25rem;
    color: var(--gray-600);
    margin-bottom: 3rem;
    line-height: 1.7;
  }
  
  .rebuild-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .rebuild-feature {
    background: var(--white);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: var(--shadow);
    text-align: center;
    border-top: 4px solid var(--primary);
  }
  
  .rebuild-feature h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--gray-900);
  }
  
  .rebuild-feature p {
    color: var(--gray-600);
    line-height: 1.6;
  }
  
  .rebuild-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  /* CTA Section */
  .cta {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    padding: 6rem 0;
    text-align: center;
  }
  
  .cta h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Space Grotesk', sans-serif;
  }
  
  .cta p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Responsive Adjustments */
  @media (max-width: 1024px) {
    .hero, .products-section, .rebuild-program, .cta {
      padding: 4rem 0;
    }
    .rebuild-service {
      padding: 4rem 0;
    }
  }

  @media (max-width: 768px) {
    .hero h1 { font-size: 2.25rem; }
    .products-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .rebuild-features {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .rebuild-content h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .hero h1 { font-size: 2rem; }
    .product-info h2 {
      font-size: 1.5rem;
    }
    .price {
      font-size: 1.25rem;
    }
    .rebuild-content h2 {
