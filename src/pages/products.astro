---
// src/pages/products.astro
import Layout from '../layouts/Layout.astro';

const pageTitle = "PDC Core Barrels & Rebuild Program | Weldco Blades | Utah, Colorado, Wyoming";
const pageDescription = "Explore our 8-inch and 10-inch PDC core barrels, engineered for dry-cutting and superior longevity. Learn about our cost-effective rebuild program.";
---

<Layout title={pageTitle} description={pageDescription} currentPage="products">
