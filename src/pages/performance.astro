---
// src/pages/performance.astro
import Layout from '../layouts/Layout.astro';

const pageTitle = "Proven Performance: 4X More Cores | PDC Core Barrel Case Studies | Rocky Mountain Results";
const pageDescription = "See real performance data from Rocky Mountain contractors. EasTseW and SCI testimonials prove 600-800 cores per blade/rebuild vs industry standard 75-200. Get the facts.";
const pageUrl = "https://corebarrels.com/performance";
const pageKeywords = "PDC core barrel performance, utility locating case studies, Rocky Mountain drilling results, EasTseW testimonial, SCI Sorensen Companies, 4X more cores proof, core barrel efficiency, dry cutting technology, Utah drilling contractor, Colorado utility locating, Wyoming oil field drilling, core barrel testimonials";
---

<Layout title={pageTitle} description={pageDescription} currentPage="performance">
  <!-- Enhanced SEO Meta Tags -->
  <meta name="keywords" content={pageKeywords} slot="head" />
  <meta name="author" content="Weldco Blades" slot="head" />
  <meta name="robots" content="index, follow" slot="head" />
  <meta name="language" content="English" slot="head" />
  <meta name="revisit-after" content="7 days" slot="head" />
  <meta name="distribution" content="global" slot="head" />
  <meta name="rating" content="general" slot="head" />
  <meta name="subject" content="PDC Core Barrel Performance Case Studies" slot="head" />
  <meta name="classification" content="Industrial Equipment" slot="head" />
  <meta name="coverage" content="Rocky Mountain Region" slot="head" />
  <meta name="target" content="Utility Contractors, Government Agencies" slot="head" />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:url" content={pageUrl} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta property="og:site_name" content="Weldco Blades - PDC Core Barrels" slot="head" />
  <meta property="og:image" content="https://corebarrels.com/images/core-barrel-hero.jpg" slot="head" />
  <meta property="og:image:alt" content="PDC Core Barrel Performance Results and Case Studies" slot="head" />
  <meta property="og:image:width" content="1200" slot="head" />
  <meta property="og:image:height" content="630" slot="head" />
  <meta property="og:locale" content="en_US" slot="head" />
  <meta property="og:locale:alternate" content="es_ES" slot="head" />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:title" content={pageTitle} slot="head" />
  <meta name="twitter:description" content={pageDescription} slot="head" />
  <meta name="twitter:image" content="https://corebarrels.com/images/core-barrel-hero.jpg" slot="head" />
  <meta name="twitter:image:alt" content="PDC Core Barrel Performance Results and Case Studies" slot="head" />
  <meta name="twitter:site" content="@weldcoblades" slot="head" />
  <meta name="twitter:creator" content="@weldcoblades" slot="head" />
  
  <!-- Enhanced Schema markup for case studies and performance data -->
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "PDC Core Barrel Performance Case Studies",
    "description": "Real-world performance data and customer testimonials from Rocky Mountain contractors",
    "url": "https://corebarrels.com/performance",
    "mainEntity": [
      {
        "@type": "Review",
        "reviewBody": "Weldco's PDC core barrels have revolutionized our utility locating process, delivering consistent performance even in challenging multi-layer asphalt conditions with high rubber content.",
        "author": {
          "@type": "Organization",
          "name": "EasTseW",
          "description": "Utility Locating Specialists",
          "url": "https://eastsew.com"
        },
        "itemReviewed": {
          "@type": "Product",
          "name": "Weldco PDC Core Barrels",
          "brand": {
            "@type": "Brand",
            "name": "Weldco Blades"
          },
          "description": "High-performance PDC core barrels for utility locating"
        },
        "reviewRating": {
          "@type": "Rating",
          "ratingValue": "5",
          "bestRating": "5"
        },
        "datePublished": "2024-12-19",
        "reviewAspect": "Performance"
      },
      {
        "@type": "Review", 
        "reviewBody": "SCI has seen a dramatic reduction in downtime and cost since switching to Weldco Blades. The rebuild program is a game changer!",
        "author": {
          "@type": "Organization",
          "name": "Sorensen Companies (SCI)",
          "description": "Infrastructure Contractors",
          "url": "https://sorensencompanies.com"
        },
        "itemReviewed": {
          "@type": "Product", 
          "name": "Weldco PDC Core Barrels",
          "brand": {
            "@type": "Brand",
            "name": "Weldco Blades"
          },
          "description": "High-performance PDC core barrels for utility locating"
        },
        "reviewRating": {
          "@type": "Rating",
          "ratingValue": "5", 
          "bestRating": "5"
        },
        "datePublished": "2024-12-19",
        "reviewAspect": "Cost Effectiveness"
      }
    ],
    "breadcrumb": {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://corebarrels.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Performance",
          "item": "https://corebarrels.com/performance"
        }
      ]
    },
    "about": {
      "@type": "Thing",
      "name": "PDC Core Barrel Performance",
      "description": "Performance data and case studies for PDC core barrels"
    },
    "mentions": [
      {
        "@type": "Organization",
        "name": "EasTseW",
        "description": "Utility Locating Specialists"
      },
      {
        "@type": "Organization", 
        "name": "Sorensen Companies (SCI)",
