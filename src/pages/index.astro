    }
    .cta-content h2 {
      font-size: 2.25rem;
    }
  }
  
  @media (max-width: 480px) {
    .hero-content h2 { font-size: 2rem; }
    .hero-content p { font-size: 1.125rem; }
    .stat-number { font-size: 2.5rem; }
    .stat-title { font-size: 1.125rem; }
    .feature-card h3 { font-size: 1.25rem; }
    .states h2 { font-size: 1.75rem; }
    .state-card h3 { font-size: 1.125rem; }
    .state-card p { font-size: 0.8rem; }
    .cta-content h2 { font-size: 1.75rem; }
