  }
  
  .cta .container {
    position: relative;
    z-index: 1;
  }
  
  .cta-content h2 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Space Grotesk', sans-serif;
  }
  
  .cta-content p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* States Section */
  .states {
    background: var(--gray-50);
    padding: 4rem 0;
  }
  
  .states h2 {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    font-family: 'Space Grotesk', sans-serif;
    color: var(--gray-900);
  }
  
  .states-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }
  
  .state-card {
    background: var(--white);
    padding: 1.5rem;
    border-radius: 0.75rem;
    text-align: center;
    box-shadow: var(--shadow);
    transition: all 0.3s ease;
    border: 1px solid var(--gray-200);
    position: relative;
    overflow: hidden;
  }
  
  .state-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(215, 72, 39, 0.1), transparent);
    transition: left 0.5s;
  }
  
  .state-card:hover::before {
    left: 100%;
  }
  
  .state-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-light);
  }
  
  .state-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--gray-900);
    font-family: 'Space Grotesk', sans-serif;
  }
  
  .state-card p {
    color: var(--gray-600);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  /* Responsive Adjustments */
  @media (max-width: 1024px) {
    .hero { padding: 4rem 0; }
    .features { padding: 4rem 0; }
    .cta { padding: 4rem 0; }
    .states-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }
    .hero-content {
