<style>
.footer {
  background: var(--gray-900);
  color: var(--gray-300);
  padding: 4rem 0 2rem;
}

.footer .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 3rem;
  margin-bottom: 3rem;
  padding-bottom: 3rem;
  border-bottom: 1px solid var(--gray-700);
}

.footer-section h4 {
  font-size: 1.125rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
  color: var(--white);
  font-family: 'Space Grotesk', sans-serif;
}

.footer-logo {
  display: block;
  margin-bottom: 1.5rem;
}

.footer-logo img {
  height: 50px;
  width: auto;
}

.footer-description {
  color: var(--gray-400);
  line-height: 1.6;
}

.footer-links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-links li {
  margin-bottom: 0.75rem;
}

.footer-links a {
  color: var(--gray-400);
  text-decoration: none;
  transition: color 0.3s ease, padding-left 0.3s ease;
}

.footer-links a:hover {
  color: var(--primary);
  padding-left: 5px;
}

.contact-info p {
  margin-bottom: 0.5rem;
  color: var(--gray-400);
}

.contact-info a {
  color: var(--gray-400);
  text-decoration: none;
  transition: color 0.3s ease;
}

.contact-info a:hover {
  color: var(--primary);
}

.footer-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.875rem;
  color: var(--gray-500);
}

.social-links {
  display: flex;
  gap: 1.5rem;
}

.social-links a {
  color: var(--gray-500);
  transition: color 0.3s ease;
}

.social-links a:hover {
  color: var(--primary);
}

.social-links svg {
  width: 24px;
  height: 24px;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .footer {
    padding: 3rem 0 1.5rem;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    gap: 2rem;
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
  }
  
  .footer-section {
    padding: 0 1rem;
  }
  
  .footer-section h4 {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  
  .footer-logo {
    margin-bottom: 1rem;
  }
  
  .footer-logo img {
    height: 40px;
  }
  
  .footer-description {
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    font-size: 0.9rem;
  }
  
  .contact-info p {
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
  }
  
  .footer-bottom {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
    font-size: 0.8rem;
  }
  
  .social-links {
    gap: 1rem;
  }
  
  .social-links svg {
    width: 20px;
    height: 20px;
  }
}

@media (max-width: 480px) {
  .footer {
    padding: 2rem 0 1rem;
  }
  
  .footer-content {
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
  }
  
  .footer-section {
    padding: 0 0.5rem;
  }
  
  .footer-description {
    font-size: 0.85rem;
  }
  
  .footer-links a {
    font-size: 0.85rem;
  }
  
  .contact-info p {
    font-size: 0.85rem;
  }
  
  .footer-bottom {
    font-size: 0.75rem;
  }
  
  .social-links svg {
    width: 18px;
    height: 18px;
  }
}
</style> 